@model IEnumerable<WebApplication3.Models.Goodss>
@{
    ViewData["Title"] = "Персона";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Персона</title>

    <style>
        .product-card {
            border: 1px solid #ccc;
            padding: 20px;
            margin-bottom: 20px;
            width: 700px; /* Фиксированная ширина карточки */
        }

            .product-card img {
                width: 100%; /* Фиксированная ширина изображения внутри карточки */
                height: 80%; /* Фиксированная высота изображения внутри карточки */
                display: block;
                margin-bottom: 10px;
            }

        .product-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .product-price {
            font-weight: bold;
        }

        .add-to-cart-btn {
            padding: 5px 10px;
            color: white;
            border: none;
            cursor: pointer;
        }

            .add-to-cart-btn:hover {
                background-color: #bdb5b5;
            }


        .form button {
            background-color: #360250;
            color: #fff;
            padding: 10px 20px;
            font-size: 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .form button:hover {
                background-color: #4a0b69;
            }
    </style>

</head>

<body bgcolor="#f8f8f8">
    <div class="container">
        @foreach (var item in Model)
        {
            @if ((item.goodid == 10) || (item.goodid == 11) || (item.goodid == 12))
            {
                <div class="product-card">
                    <div id="carouselExampleControls_@item.goodid" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="@item.foto1" alt="@item.name">
                            </div>
                            @if (!string.IsNullOrEmpty(item.foto2))
                            {
                                <div class="carousel-item">
                                    <img src="@item.foto2" alt="@item.name">
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.foto3))
                            {
                                <div class="carousel-item">
                                    <img src="@item.foto3" alt="@item.name">
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls_@item.goodid" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls_@item.goodid" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <h3>@item.name</h3>
                    <p>@item.info</p>
                    <div class="product-info">
                        <p class="product-price">@item.price Р</p>
                        <div class="add-to-cart-btn">

                            <div class="add-to-cart-btn">

                                <form>
                                    <button type="button" class="card__add addToCartButton" data-goodid="@item.goodid">В корзину</button>
                                </form>

                            </div>

                        </div>
                    </div>
                </div>
                <BR>
                <BR>
            }

        }
    </div>
</body>
</html>
