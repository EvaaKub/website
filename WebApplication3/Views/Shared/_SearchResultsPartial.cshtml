@model IEnumerable<WebApplication3.Models.Goodss>
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
</head>
<body>
    <div class="modal-body">
        @if (Model != null && Model.Any())
        {
            <h3>Найденные товары:</h3>
            <div class="list-group">
                <style>
                    .card {
                        width: 400px;
                        margin-bottom: 20px;
                        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                    }

                        .card img {
                            max-width: 100px;
                            max-height: 200px;
                            height: auto;
                        }

                    .card-title {
                        font-size: 1.25rem;
                        margin-bottom: 0.5rem;
                    }

                    .card-text {
                        margin-bottom: 0.5rem;
                    }

                    .card-body {
                        overflow: hidden; /* Предотвращает выход текста за границы карточки */
                    }
                </style>

                    

                    @foreach (var good in Model)
                    {
                        <div class="card">
                            <div class="card__top">
                        <a class="card__image">
                                <img src="@Url.Content(good.foto1)" />
                        </a>
                       
                        </div>
                            <div class="card-body">
                            <h5 class="card-title">@good.name</h5>
                            <p class="card-text">@good.miniinfo</p>

                            <p class="card-text">Цена: @good.price</p>
                            <div class="add-to-cart-btn">

                                <form>
                                    <button type="button" class="card__add addToCartButton" data-goodid="@good.goodid">В корзину</button>
                                </form>

                            </div>
                            </div>
                        </div>
                    }
                </div>
        }
        else
        {
            <p>Ничего не найдено</p>
        }
    </div>

    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>